@model IEnumerable<PinkGarage.Models.VehicleType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CityGarageLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="IndexSearch">
        <p>
            <b>Type :</b> @Html.TextBox("SearchString")
            <input type="submit" value="search" />
            <input type="button" value="Show all" onclick="@("window.location.href='" + @Url.Action("Index", "VehicleTypes") + "'");" />
        </p>
    </div>
    <div class="create">
            <input type="button" value="Create New Type" onclick="@("window.location.href='" + @Url.Action("Create", "VehicleTypes") + "'");" />
    </div>
}
<br />
<div>
    @ViewBag.Error
</div>
<br />
<table class="table">
    <tr>
        <th>
            Vehicle Type
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTypeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VehicleTypeId }) |
                @Html.ActionLink("Details", "Details", new { id = item.VehicleTypeId })
            </td>
        </tr>
    }

</table>
